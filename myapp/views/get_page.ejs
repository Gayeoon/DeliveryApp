<!-- Delivery App 첫 페이지의 HTML 문서입니다. -->
<!-- 택배사와 송장번호를 입력 받습니다. -->
<!-- 둘 중 입력되지 않은 항목이 존재하면 다음 화면으로 넘어가지 않습니다. -->
<!-- Get 방식을 이용해서 파라미터를(택배사번호&송장번호) 다음 페이지로 넘깁니다.-->

<!DOCTYPE html> 
<html>
    <head>
		<script type="text/javascript">
		function check()
		{
		  if (document.search.number.value == "")
		  {
			alert("송장번호를 입력해주세요!");
			document.search.number.focus();
			return false;
		  }
		  if (document.search.code.value == "none")
		  {
			alert("택배사를 선택해주세요!");
			document.search.code.focus();
			return false;
		  }
		  else
		  {
			document.search.submit();
		  }
		}
		
		</script>
		
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/get.css' />
    </head>
    <body>
		<div class="all">
		<h2>택배를 조회해보세요!</h2>
        <div class="wrap">
        <form name="search" action = "/result_page" method="get" >
            <select name="code" id="code">
				<option value = "none"> 택배사를 선택해주세요 </option>
				<option value = "04"> CJ대한통운 </option>
				<option value = "05"> 한진택배 </option>
				<option value = "23"> 경동택배 </option>
			<input type="number" name="number" id="number" placeholder="운송장 번호를 -없이 입력해주세요">
			
            <input type="button" value="조회" onclick="check()" id="btn">
        </form>
		</div>
		</div>
		
    </body>
</html>
